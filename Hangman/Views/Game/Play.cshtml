@using Hangman.Models;


<!DOCTYPE html>
<html>
  <head>
    <meta charset='utf-8'>
    <title>Hello friend!</title>
    <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'>
  <link href="https://fonts.googleapis.com/css?family=Gugi" rel="stylesheet">
    <link rel="stylesheet" href="~/css/styles.css">
  </head>
  <body>
    <h1>🥦HANG 🕷  MANG ♿️ </h1>


    @if (Model.Guesses > 0)
    {
      <pre>_________</pre>
    }

    @if (Model.Guesses > 1)
    {
      <pre>  O     |</pre>
    }

    @if (Model.Guesses > 2)
    {
      <pre> /|\    |</pre>
    }

    @if (Model.Guesses > 3)
    {
      <pre>  |     |</pre>
    }

    @if (Model.Guesses > 4)
    {
      <pre> / \    |</pre>
    }
    @if (Model.Guesses > 5)
    {
    <h2>The word you missed was: @Model.InitialWord</h2>

    <p class="gifs"><img src="https://media.giphy.com/media/cvPWgMNRaNnsA/giphy.gif"><br><img src="
    https://media.giphy.com/media/3o7bukt4CHaWpxjXWM/giphy.gif"></p>
    <form action='/game/play/again' method='post'>
      <button id="playAgain" type='submit'>Play Again</button>
    </form>
      }
    else if (Model.GetWinner() == true)
    {
        <p class="gifs"><img src="https://media.giphy.com/media/cEjIYZNeO7VxS/giphy.gif"><br><img src="https://media.giphy.com/media/w6KZrFEa9Q0vpL7oQK/giphy.gif"></p>
        <form action='/game/play/again' method='post'>
          <button id="playAgain" type='submit'>Play Again</button>
        </form>
    }
      else
      {
        <span class="guess">
    @foreach(var letter in Model.GetGuessed())
    {
      <p style="display:inline">@letter</p>
    }
    </span>
<br>
    @foreach(var letter in @Game.GetLetters())
    {
      if(@letter != '_')
      {
        <form action='/game/play/@letter' method='post' class="letterButton">
          <button type='submit'>@letter</button>
        </form>
      }

    }
    }
  </body>
